pipeline{
    
    agent any
    environment{
    
    PATH="/var/lib/jenkins/workspace/declarativeDemo/jenkinsDemo"


    }
    
    stages{
        
       stage("Git checkout")
       {
           
           steps{
               
               git 'https://github.com/Somyagaur06/jenkinsDemo.git'
               
          }
          }
          
          
          stage("Maven Build")
          {
          
          steps{
  
    withEnv(['PATH=/var/lib/jenkins/workspace/declarativeDemo/jenkinsDemo']){
         sh "mvn clean package"
         }
          }
          
          
          }
          
          
        }
    
    
}
