pipeline{
    
    agent any
    environment{
    
    PATH="/usr/share/maven/bin/:$PATH"
 }
 

    
    stages{
        
       stage("Git checkout")
       {
           
           steps{
               
               git 'https://github.com/Somyagaur06/jenkinsDemo.git'
                }
          }
          
          
          stage("Maven Build")
          {
          
          steps{
   
     dir('/var/lib/jenkins/workspace/declarativeDemo/jenkinsDemo'){
  
         sh "mvn clean package"
         
          }
          
          }
          
          
          
          }
          
          
          
          }
          
          
          }
          
 
          
        }
